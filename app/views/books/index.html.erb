<h1>Books</h1>
<!-------------------------------投稿一覧------------------------------------>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Show",book_path(book) %></td>
    <td><%= link_to "Edit",edit_book_path(book) %></td>
    <td><%= link_to "Destroy",book_path(book), method: :delete %></td>
  </tr>
  <% end %>
</table>

<!-------------------------------新規投稿欄--------------------------------->

<h2>New Book</h2>
<!----エラー文---->
<%= @book.errors.full_messages.each do |message| %>
<%= "#{@book.errors.full_messages.length}error prohibited this book from being saved:" %>
  <ul>
    <li>
      <%= message %>
    </li>
  </ul>
<% end %>
<!---------------->
<%= form_with model:@book, url:books_path, local:true do |f|%>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>
  <%= f.submit "Create Book" %>
<% end %>


